<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tlh.sys.mapper.RoleMapper">
    <insert id="saveRole" parameterType="role">
        INSERT INTO sys_roles(roleName) VALUES (#{roleName})
    </insert>

    <delete id="deleteRole" parameterType="role">
        delete from sys_roles where id=#{id}
    </delete>

    <update id="updateRole" parameterType="role">
        update sys_roles set roleName=#{roleName} where id=#{id}
    </update>

    <select id="findRoles" parameterType="role">
        select * from sys_roles
    </select>

</mapper>